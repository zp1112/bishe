<div class="post fullpage" id="full_post">
    <div class="time_dot_date">
        <%= date(post.date) %>
    </div>
    <div class="full">
        <div class="figure">
            <div class="bg_img" style="background-image: url('<%= post.banner || '/1.jpg' %>')"></div>
        </div>
        <article class="article">
            <h2><a href="<%- url_for(post.path) %>"><%= post.title %></a></h2>
            <span class="post_date" datetime="<%= full_date(post.date)%>"></span>
            <section>
                <% if (post.excerpt && index){ %>
                <%- post.excerpt %>

                <a class="article-more-link" href="<%- url_for(post.path) %>#more"><%= theme.excerpt_link %></a>

                <% } else { %>
                <%- post.content %>
                <% } %>
            </section>
            <section class="meta">
                城市: <%- list_categories(post.categories, {
                    show_count: false,
                    style: 'none'
                }) %>
                , 标签: <%- list_tags(post.tags, {
                    show_count: false,
                    style: 'none'
                }) %>
            </section>
        </article>
    </div>
    <!-- 多说评论框 start -->
    	<div class="ds-thread" data-thread-key="<%= post.permalink %>" data-title="<%= post.title %>" data-url="<%= post.permalink %>"></div>
    <!-- 多说评论框 end -->
    <!-- 多说公共JS代码 start (一个网页只需插入一次) -->
    <script type="text/javascript">
    var duoshuoQuery = {short_name:"bishe"};
    	(function() {
    		var ds = document.createElement('script');
    		ds.type = 'text/javascript';ds.async = true;
    		ds.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') + '//static.duoshuo.com/embed.js';
    		ds.charset = 'UTF-8';
    		(document.getElementsByTagName('head')[0]
    		 || document.getElementsByTagName('body')[0]).appendChild(ds);
    	})();
    	</script>
    <!-- 多说公共JS代码 end -->
</div>
