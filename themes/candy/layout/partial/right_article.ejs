<div class="post" id="post-<%= no %>">
  <div class="mid" data-anchor-target="#post-<%= no %>" data-center-top="opacity:0;" data-center-bottom="opacity:1;" data-top="opacity:0;">
    <time class="time_dot_date" datetime="<%= date(post.date) %>">
      <%= date(post.date) %>
      <div class="time_dot"></div>
    </time>

  </div>
  <div class="right article" data-anchor-target="#post-<%= no %>" data-bottom-top="opacity:0;margin-right:-200px;margin-top:50px;" data-center-top="opacity:1;margin-right:20px;margin-top:0;">
    <div class="arrow_side"></div>
    <article>
      <h2><a href="<%- url_for(post.path) %>"><%= post.title %></a></h2>
      <section>
        <% if (post.excerpt && index){ %>
        <%- post.excerpt %>

        <a class="article-more-link" href="<%- url_for(post.path) %>#more"><%= theme.excerpt_link %></a>

        <% } else { %>
        <%- post.content %>
        <% } %>
      </section>
      <section class="meta">
        城市: <%- list_categories(post.categories, {
          show_count: false,
          style: 'none'
        }) %>
        , 标签: <%- list_tags(post.tags, {
          show_count: false,
          style: 'none'
        }) %>
      </section>
    </article>
  </div>
  <div class="left">
    <div class="arrow_side"></div>
    <div class="figure" data-anchor-target="#post-<%= no %>" data-bottom-top="opacity:0;left: -300px;top: 100px;" data-center-top="opacity:1;left:0px;top:0;">
      <div class="bg_img" style="background-image: url('<%= post.banner || '/1.jpg' %>')"></div>
    </div>
  </div>
</div>